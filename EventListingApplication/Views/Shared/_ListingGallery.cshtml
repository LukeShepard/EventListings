@model IEnumerable<EventListingApplication.Models.Listing>

@foreach (var item in Model)
{
 <div class="listing-index-card">
    <h3>"@item.Title"</h3>

    
    
        <img class="listing-index-card-img" src="@Url.Action("GetImage", "Listing", new{ id = item.ListingID })" />
    
     <div class ="listing-metadata">
    <p>
        <span class="display-label">
             Created By:
             @Html.DisplayFor(model => item.UserName)
        </span>
    </p>
     <p>
         <span class="display-label">
             Created On:
             @Html.DisplayFor(model => item.CreatedDate)
         </span>
    </p>
    @Html.ActionLink("Display","Display", new { id = item.ListingID})
         </div>
 </div>
}

